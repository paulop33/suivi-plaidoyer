{% extends 'base.html.twig' %}

{% block title %}Statistiques Globales - Suivi des Mandatures{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">üìä Statistiques Globales</h1>
                    <p class="text-muted mb-0">Vue d'ensemble des performances de toutes les communes</p>
                </div>
                <div>
                    <a href="{{ path('app_progress_tracking_index') }}" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Retour √† l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques g√©n√©rales -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-primary mb-2">
                        <i class="fas fa-city fa-2x"></i>
                    </div>
                    <h3 class="h4 mb-1">{{ globalStats.totalCities }}</h3>
                    <p class="text-muted mb-0">Communes avec liste √©lue</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="fas fa-tasks fa-2x"></i>
                    </div>
                    <h3 class="h4 mb-1">{{ globalStats.totalCommitments }}</h3>
                    <p class="text-muted mb-0">Engagements suivis</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-info mb-2">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h3 class="h4 mb-1">{{ globalStats.totalUpdates }}</h3>
                    <p class="text-muted mb-0">Mises √† jour</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-warning mb-2">
                        <i class="fas fa-percentage fa-2x"></i>
                    </div>
                    <h3 class="h4 mb-1">{{ globalStats.globalAverageProgress }}%</h3>
                    <p class="text-muted mb-0">Progression moyenne</p>
                </div>
            </div>
        </div>
    </div>

    <!-- R√©partition par statut -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie text-primary"></i>
                        R√©partition par statut
                    </h5>
                </div>
                <div class="card-body">
                    {% if globalStats.statusDistribution is not empty %}
                        {% for statusData in globalStats.statusDistribution %}
                            {% set status = statusData.status %}
                            {% set count = statusData.count %}
                            {% set percentage = globalStats.totalUpdates > 0 ? (count / globalStats.totalUpdates * 100) : 0 %}

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex align-items-center">
                                    <span class="badge me-2" style="background-color: {{ status.color }};">
                                        <i class="{{ status.icon }}"></i>
                                    </span>
                                    <span>{{ status.label }}</span>
                                </div>
                                <div class="text-end">
                                    <strong>{{ count }}</strong>
                                    <small class="text-muted">({{ percentage|round(1) }}%)</small>
                                </div>
                            </div>
                            <div class="progress mb-3" style="height: 6px;">
                                <div class="progress-bar"
                                     style="width: {{ percentage }}%; background-color: {{ status.color }};">
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucune donn√©e de progression disponible</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-trophy text-warning"></i>
                        Top 5 des communes
                    </h5>
                </div>
                <div class="card-body">
                    {% if topPerformingCities is not empty %}
                        {% for cityData in topPerformingCities %}
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h6 class="mb-1">
                                        <a href="{{ path('app_progress_tracking_city', {slug: cityData.city.slug}) }}"
                                           class="text-decoration-none">
                                            {{ cityData.city.name }}
                                        </a>
                                    </h6>
                                    <small class="text-muted">
                                        {{ cityData.stats.commitmentsWithProgress }}/{{ cityData.stats.totalCommitments }} engagements
                                    </small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-success">{{ cityData.stats.averageProgress }}%</span>
                                </div>
                            </div>
                            <div class="progress mb-3" style="height: 4px;">
                                <div class="progress-bar bg-success"
                                     style="width: {{ cityData.stats.averageProgress }}%;">
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-trophy fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucune donn√©e de classement disponible</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Activit√© r√©cente -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock text-info"></i>
                        Activit√© r√©cente
                    </h5>
                </div>
                <div class="card-body">
                    {% if globalStats.recentUpdates is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Commune</th>
                                        <th>Engagement</th>
                                        <th>Statut</th>
                                        <th>Progression</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for update in globalStats.recentUpdates %}
                                        <tr>
                                            <td>
                                                <small class="text-muted">
                                                    {{ update.updateDate|date('d/m/Y H:i') }}
                                                </small>
                                            </td>
                                            <td>
                                                <a href="{{ path('app_progress_tracking_city', {slug: update.electedList.city.slug}) }}"
                                                   class="text-decoration-none">
                                                    {{ update.electedList.city.name }}
                                                </a>
                                            </td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 300px;">
                                                    {{ update.commitment.proposition.title }}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge" style="background-color: {{ update.status.color }};">
                                                    <i class="{{ update.status.icon }}"></i>
                                                    {{ update.status.label }}
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress me-2" style="width: 60px; height: 6px;">
                                                        <div class="progress-bar bg-primary"
                                                             style="width: {{ update.effectiveProgressPercentage }}%;">
                                                        </div>
                                                    </div>
                                                    <small>{{ update.effectiveProgressPercentage }}%</small>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucune activit√© r√©cente</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.progress {
    background-color: #f8f9fa;
}

.card {
    transition: transform 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-2px);
}

.table th {
    border-top: none;
    font-weight: 600;
    color: #6c757d;
    font-size: 0.875rem;
}

.badge {
    font-size: 0.75rem;
}
</style>
{% endblock %}
