{% extends 'base.html.twig' %}

{% block title %}{{ candidateList.nameList }} - {{ candidateList.city.name }} - Plaidoyer Vélo Bordeaux{% endblock %}

{% block descriptionmeta %}Les engagements autour du vélo de {{ candidateList.firstname }} {{ candidateList.lastname }}, candidat·e de {{ candidateList.nameList }}.
    {{ candidateList.firstname }} {{ candidateList.lastname }} est candidat·e dans la commune de {{ candidateList.city.name }}.
    {{ candidateList.firstname }} {{ candidateList.lastname }} s'est engagé·e sur {{ listStats.totalCommitments }} propositions.
    La liste peut se positionner dans plusieurs catégories ({% for categoryName, categoryData in commitmentsByCategory  %}{{ categoryName }}{% if not loop.last %}, {% endif %}{% endfor %}).
{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="candidate-header">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb breadcrumb-custom">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-white-50">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_cities_index') }}" class="text-white-50">
                            Communes
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_city_show', {slug: candidateList.city.slug}) }}" class="text-white-50">
                            {{ candidateList.city.name }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">
                        {{ candidateList.nameList }}
                    </li>
                </ol>
            </nav>

            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar-placeholder me-3">
                            {{ candidateList.firstname|slice(0,1)|upper }}{{ candidateList.lastname|slice(0,1)|upper }}
                        </div>
                        <div>
                            <h1 class="display-5 fw-bold mb-1">{{ candidateList.nameList }}</h1>
                            <p class="lead mb-0">{{ candidateList.firstname }} {{ candidateList.lastname }}</p>
                        </div>
                    </div>
                    <div class="d-flex gap-4">
                        <div class="text-center">
                            <div class="h3 mb-1">{{ listStats.totalCommitments }}</div>
                            <small class="opacity-75">Engagements</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">{{ listStats.commitmentsByCategory|length }}</div>
                            <small class="opacity-75">Catégories</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">{{ candidateList.city.name }}</div>
                            <small class="opacity-75">Commune</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fas fa-user-tie fa-8x opacity-50"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Profile Card Section -->
    <section class="py-0">
        <div class="container">
            <div class="profile-card">
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="fw-bold mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Informations de la liste
                        </h4>
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <strong class="text-muted">Nom de la liste :</strong><br>
                                <span class="fs-5">{{ candidateList.nameList }}</span>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <strong class="text-muted">Commune :</strong><br>
                                <a href="{{ path('app_city_show', {slug: candidateList.city.slug}) }}" class="fs-5 text-decoration-none">
                                    <i class="fas fa-map-marker-alt me-1"></i>{{ candidateList.city.name }}
                                </a>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <strong class="text-muted">Tête de liste :</strong><br>
                                <span class="fs-5">{{ candidateList.firstname }} {{ candidateList.lastname }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if candidateList.globalComment %}
    <!-- General Comment Section -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="global-comment-card">
                <h4 class="fw-bold mb-3">
                    <i class="fa-solid fa-quote-left text-info me-2"></i>
                    Commentaire général de {{ candidateList.firstname }} {{ candidateList.lastname }}
                </h4>
                <div class="alert alert-secondary mb-0">
                    <p class="mb-0">{{ candidateList.globalComment|nl2br }}</p>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Commitments Section -->
    <section class="py-5">
        <div class="container">
            {% if commitmentsByCategory is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-handshake fa-4x text-muted mb-3"></i>
                    <h3 class="text-muted">Aucun engagement</h3>
                    <p class="text-muted">Cette liste n'a pris aucun engagement pour le moment.</p>
                    <a href="{{ path('app_city_show', {id: candidateList.city.id, slug: candidateList.city.slug}) }}" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à {{ candidateList.city.name }}
                    </a>
                </div>
            {% else %}
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="fw-bold">
                            <i class="fas fa-handshake text-success me-2"></i>
                            Engagements par catégorie
                        </h2>
                    </div>
                </div>

                <div class="row">
                    {% for categoryName, categoryData in commitmentsByCategory %}
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="category-card h-100">
                                <div class="category-header">
                                    <h5 class="fw-bold mb-1">
                                        <i class="fas fa-tag me-2"></i>
                                        {{ categoryName }}
                                    </h5>
                                    <small class="opacity-75">
                                        {{ categoryData.propositions|length }} proposition{{ categoryData.propositions|length > 1 ? 's' : '' }}
                                    </small>
                                </div>
                                <div class="card-body">
                                    {% for propositionData in categoryData.propositions %}
                                        {% set commitmentStatus = propositionData.commitment.status %}
                                        <div class="proposition-item{% if commitmentStatus %} proposition-{{ commitmentStatus.value }}{% endif %}">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <h6 class="fw-bold mb-1">
                                                        {% if commitmentStatus %}
                                                            {% if commitmentStatus.value == 'accepted' %}
                                                                <span class="status-indicator status-accepted">✅</span>
                                                            {% endif %}
                                                        {% endif %}
                                                        {{ propositionData.proposition.title }}
                                                    </h6>
                                                    {% if propositionData.commitment.commentCandidateList %}
                                                        <p class="text-muted small mb-2">
                                                            <i class="fas fa-quote-left me-1"></i>
                                                            {{ propositionData.commitment.commentCandidateList }}
                                                        </p>
                                                    {% endif %}
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar me-1"></i>
                                                        {{ propositionData.commitment.creationDate|date('d/m/Y') }}
                                                    </small>
                                                </div>
                                                <a href="{{ path('app_proposition_show', {id: propositionData.proposition.id}) }}"
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </div>
                                    {% endfor %}

                                    <div class="text-center mt-3 pt-3 border-top">
                                        <a href="{{ path('app_category_show', {id: categoryData.category.id, slug: categoryData.category.slug}) }}"
                                           class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-list me-1"></i>
                                            Voir toutes les propositions de {{ categoryName }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Navigation Section -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <a href="{{ path('app_city_show', {slug: candidateList.city.slug}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à {{ candidateList.city.name }}
                    </a>
                </div>
                <div class="col-md-6 text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_cities_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-city me-1"></i>Communes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
{% endblock %}
