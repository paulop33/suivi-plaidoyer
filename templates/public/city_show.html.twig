{% extends 'base.html.twig' %}

{% block title %}{{ city.name }} - Suivi Plaidoyer{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="city-header">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb breadcrumb-custom">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-white-50">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_cities_index') }}" class="text-white-50">
                            Communes
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">
                        {{ city.name }}
                    </li>
                </ol>
            </nav>

            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">{{ city.name }}</h1>
                    <p class="lead mb-4">
                        Découvrez toutes les listes candidates de cette commune et leurs engagements sur les différentes propositions.
                    </p>
                    <div class="d-flex gap-4">
                        <div class="text-center">
                            <div class="h3 mb-1">{{ cityListData|length }}</div>
                            <small class="opacity-75">Liste{{ cityListData|length > 1 ? 's' : '' }} candidate{{ cityListData|length > 1 ? 's' : '' }}</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">
                                {% set totalPropositions = 0 %}
                                {% for categoryData in propositionData %}
                                    {% set totalPropositions = totalPropositions + categoryData.propositions|length %}
                                {% endfor %}
                                {{ totalPropositions }}
                            </div>
                            <small class="opacity-75">Propositions disponibles</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">
                                {% set totalSignatures = 0 %}
                                {% for categoryData in propositionData %}
                                    {% for propositionInfo in categoryData.propositions %}
                                        {% set totalSignatures = totalSignatures + propositionInfo.totalSignatures %}
                                    {% endfor %}
                                {% endfor %}
                                {{ totalSignatures }}
                            </div>
                            <small class="opacity-75">Signatures de cette commune</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fas fa-city fa-8x opacity-50"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Overview Section -->
    <section class="py-4">
        <div class="container">
            <div class="stats-overview">
                <h4 class="fw-bold mb-3">
                    <i class="fas fa-chart-pie text-primary me-2"></i>
                    Vue d'ensemble des engagements
                </h4>
                <div class="row">
                    {% for categoryName, categoryData in propositionData %}
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="text-center">
                                <div class="h4 text-primary">{{ categoryData.propositions|length }}</div>
                                <small class="text-muted">{{ categoryName }}</small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <!-- Propositions by Category Section -->
    <section class="py-4">
        <div class="container">
            {% if propositionData is not empty %}
                <div class="propositions-section">
                    <h2 class="fw-bold mb-4">
                        <i class="fas fa-lightbulb me-2"></i>
                        Toutes les propositions à {{ city.name }}
                        <span class="badge bg-info ms-2">
                            {% set totalPropositions = 0 %}
                            {% set totalPropositionsWithCommitments = 0 %}
                            {% for categoryData in propositionData %}
                                {% for propositionInfo in categoryData.propositions %}
                                    {% set totalPropositions = totalPropositions + 1 %}
                                    {% if propositionInfo.totalSignatures > 0 %}
                                        {% set totalPropositionsWithCommitments = totalPropositionsWithCommitments + 1 %}
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                            {{ totalPropositions }} proposition{{ totalPropositions > 1 ? 's' : '' }} • {{ totalPropositionsWithCommitments }} signée{{ totalPropositionsWithCommitments > 1 ? 's' : '' }}
                        </span>
                    </h2>
                    <p class="text-muted mb-4">
                        Découvrez toutes les propositions disponibles et voyez lesquelles ont été signées par les listes candidates de cette commune.
                    </p>

                    {% for categoryName, categoryData in propositionData %}
                        {% if categoryData.propositions is not empty %}
                            <div class="category-section">
                                <h3 class="category-header">
                                    <i class="fas fa-tag me-2"></i>
                                    {{ categoryName }}
                                    <span class="badge bg-light text-dark ms-2">{{ categoryData.propositions|length }} proposition{{ categoryData.propositions|length > 1 ? 's' : '' }}</span>
                                </h3>
                                <div class="p-3">
                                    {% for propositionInfo in categoryData.propositions %}
                                        <div class="proposition-card">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="fw-bold mb-1">{{ propositionInfo.proposition.title }}</h5>
                                                {% if propositionInfo.totalSignatures > 0 %}
                                                    <span class="badge bg-primary">{{ propositionInfo.totalSignatures }} signature{{ propositionInfo.totalSignatures > 1 ? 's' : '' }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Aucune signature</span>
                                                {% endif %}
                                            </div>
                                            {% if propositionInfo.proposition.description %}
                                                <p class="text-muted small mb-2">{{ propositionInfo.proposition.description|slice(0, 150) }}{% if propositionInfo.proposition.description|length > 150 %}...{% endif %}</p>
                                            {% endif %}
                                            {% if propositionInfo.signedLists|length > 0 %}
                                                <div class="mb-2">
                                                    <strong class="small text-muted">Listes engagées :</strong>
                                                </div>
                                                <div>
                                                    {% for signedListInfo in propositionInfo.signedLists %}
                                                        {% set commitmentStatus = signedListInfo.commitment.status %}
                                                        <a href="{{ path('app_candidate_list_show', {id: signedListInfo.candidateList.id, slug: signedListInfo.candidateList.slug}) }}"
                                                           class="candidate-tag{% if signedListInfo.commitment.commentCandidateList %} candidate-tag-with-comment{% endif %}{% if commitmentStatus %} candidate-tag-{{ commitmentStatus.value }}{% endif %}"
                                                           title="Voir le profil de {{ signedListInfo.candidateList.nameList }}{% if commitmentStatus %} - {{ commitmentStatus.label }}{% endif %}">
                                                            {% if commitmentStatus %}
                                                                {% if commitmentStatus.value == 'accepted' %}✅{% elseif commitmentStatus.value == 'refused' %}❌{% endif %}
                                                            {% endif %}{{ signedListInfo.candidateList.nameList }}
                                                            {% if signedListInfo.commitment.commentCandidateList %}
                                                                <i class="fas fa-info-circle comment-icon"></i>
                                                                <div class="comment-tooltip">
                                                                    <strong>{{ signedListInfo.candidateList.nameList }} :</strong><br>
                                                                    {{ signedListInfo.commitment.commentCandidateList }}
                                                                </div>
                                                            {% endif %}
                                                        </a>
                                                    {% endfor %}
                                                </div>
                                            {% else %}
                                                <div class="text-center py-2">
                                                    <small class="text-muted">
                                                        <i class="fas fa-info-circle me-1"></i>
                                                        Aucune liste de {{ city.name }} ne s'est encore engagée sur cette proposition
                                                    </small>
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>

    <!-- City Lists Section -->
    <section class="py-4">
        <div class="container">
            {% if cityListData is not empty %}
                <div class="city-lists-section">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h2 class="fw-bold mb-2">
                                <i class="fas fa-users me-2"></i>
                                Listes candidates de {{ city.name }}
                                <span class="badge bg-primary ms-2">{{ cityListData|length }} liste{{ cityListData|length > 1 ? 's' : '' }}</span>
                            </h2>
                            <p class="text-muted mb-0">
                                Cliquez sur "Voir détails" pour consulter les engagements complets de chaque liste.
                            </p>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="listSearch"
                                       placeholder="Rechercher une liste...">
                            </div>
                        </div>
                    </div>

                    <div class="row" id="listsGrid">
                        {% for listInfo in cityListData %}
                            <div class="col-lg-4 col-md-6 mb-3 list-item"
                                 data-list-name="{{ listInfo.candidateList.nameList|lower }}">
                                <div class="candidate-mini-card">
                                    <div class="text-center mb-3">
                                        <div class="candidate-icon-circle d-inline-flex align-items-center justify-content-center bg-primary bg-opacity-10 rounded-circle mb-2">
                                            <i class="fas fa-users text-primary fa-lg"></i>
                                        </div>
                                        <h5 class="fw-bold text-primary mb-1">{{ listInfo.candidateList.nameList }}</h5>
                                        <p class="text-muted small mb-2">
                                            {{ listInfo.candidateList.firstname }} {{ listInfo.candidateList.lastname }}
                                        </p>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="text-center">
                                            <div class="h5 text-primary mb-0">{{ listInfo.totalPositivesCommitments }}</div>
                                            <small class="text-muted">Engagement{{ listInfo.totalPositivesCommitments > 1 ? 's' : '' }}</small>
                                        </div>
                                        {% if listInfo.commitmentsByCategory is not empty %}
                                            <div class="text-center">
                                                <div class="h6 text-secondary mb-0">{{ listInfo.commitmentsByCategory|length }}</div>
                                                <small class="text-muted">Catégorie{{ listInfo.commitmentsByCategory|length > 1 ? 's' : '' }}</small>
                                            </div>
                                        {% endif %}
                                    </div>

                                    {% if listInfo.commitmentsByCategory is not empty %}
                                        <div class="mb-3">
                                            {% for categoryName, categoryData in listInfo.commitmentsByCategory %}
                                                <span class="badge bg-light text-dark me-1 mb-1 badge-xs">
                                                    {{ categoryName }} ({{ listInfo.positivesCommitmentsByCategory[categoryName]|length }})
                                                </span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    <div class="text-center">
                                        <a href="{{ path('app_candidate_list_show', {id: listInfo.candidateList.id, slug: listInfo.candidateList.slug}) }}"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>
                                            Voir détails
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Navigation Section -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <a href="{{ path('app_cities_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour aux communes
                    </a>
                </div>
                <div class="col-md-6 text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('listSearch');
            const listItems = document.querySelectorAll('.list-item');

            if (searchInput && listItems.length > 0) {
                function filterLists() {
                    const searchTerm = searchInput.value.toLowerCase();
                    let visibleCount = 0;

                    listItems.forEach(item => {
                        const listName = item.dataset.listName;
                        let showItem = true;

                        // Apply search filter
                        if (searchTerm && !listName.includes(searchTerm)) {
                            showItem = false;
                        }

                        if (showItem) {
                            item.style.display = 'block';
                            visibleCount++;
                        } else {
                            item.style.display = 'none';
                        }
                    });
                }

                // Search input event
                searchInput.addEventListener('input', filterLists);
            }
        });
    </script>
{% endblock %}
