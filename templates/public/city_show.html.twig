{% extends 'base.html.twig' %}

{% block title %}{{ city.name }} - Suivi Plaidoyer{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .city-header {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            padding: 3rem 0;
        }
        .list-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            margin-bottom: 2rem;
        }
        .list-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }
        .proposition-item {
            background: white;
            border-radius: 8px;
            padding: 0.8rem;
            margin-bottom: 0.5rem;
            border-left: 3px solid #28a745;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .breadcrumb-custom {
            background: transparent;
            padding: 0;
        }
        .breadcrumb-custom .breadcrumb-item + .breadcrumb-item::before {
            content: "›";
            color: #6c757d;
        }
        .stats-overview {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .city-lists-section {
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .candidate-list-card {
            background: white;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            border-left: 3px solid #28a745;
        }
        .commitment-badge {
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            margin-right: 0.5rem;
            margin-bottom: 0.3rem;
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="city-header">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb breadcrumb-custom">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-white-50">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_cities_index') }}" class="text-white-50">
                            Communes
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">
                        {{ city.name }}
                    </li>
                </ol>
            </nav>

            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">{{ city.name }}</h1>
                    <p class="lead mb-4">
                        Découvrez toutes les listes candidates de cette commune et leurs engagements sur les différentes propositions.
                    </p>
                    <div class="d-flex gap-4">
                        <div class="text-center">
                            <div class="h3 mb-1">{{ cityListData|length }}</div>
                            <small class="opacity-75">Liste{{ cityListData|length > 1 ? 's' : '' }} candidate{{ cityListData|length > 1 ? 's' : '' }}</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">
                                {% set totalPropositions = 0 %}
                                {% for categoryData in propositionData %}
                                    {% set totalPropositions = totalPropositions + categoryData.propositions|length %}
                                {% endfor %}
                                {{ totalPropositions }}
                            </div>
                            <small class="opacity-75">Propositions disponibles</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">
                                {% set totalSignatures = 0 %}
                                {% for categoryData in propositionData %}
                                    {% for propositionInfo in categoryData.propositions %}
                                        {% set totalSignatures = totalSignatures + propositionInfo.totalSignatures %}
                                    {% endfor %}
                                {% endfor %}
                                {{ totalSignatures }}
                            </div>
                            <small class="opacity-75">Signatures de cette commune</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fas fa-city fa-8x opacity-50"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Overview Section -->
    <section class="py-4">
        <div class="container">
            <div class="stats-overview">
                <h4 class="fw-bold mb-3">
                    <i class="fas fa-chart-pie text-primary me-2"></i>
                    Vue d'ensemble des engagements
                </h4>
                <div class="row">
                    {% for categoryName, categoryData in propositionData %}
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="text-center">
                                <div class="h4 text-primary">{{ categoryData.propositions|length }}</div>
                                <small class="text-muted">{{ categoryName }}</small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <!-- City Lists Section -->
    <section class="py-4">
        <div class="container">
            {% if cityListData is not empty %}
                <div class="city-lists-section">
                    <h2 class="fw-bold mb-4">
                        <i class="fas fa-users me-2"></i>
                        Toutes les listes de {{ city.name }}
                        <span class="badge bg-success ms-2">{{ cityListData|length }} liste{{ cityListData|length > 1 ? 's' : '' }}</span>
                    </h2>

                    <div class="row">
                        {% for listInfo in cityListData %}
                            <div class="col-lg-6 mb-3">
                                <div class="candidate-list-card">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="flex-grow-1">
                                            <h4 class="fw-bold text-primary mb-1">{{ listInfo.candidateList.nameList }}</h4>
                                            <p class="text-muted mb-2">
                                                <i class="fas fa-user me-1"></i>
                                                {{ listInfo.candidateList.firstname }} {{ listInfo.candidateList.lastname }}
                                            </p>
                                            {% if listInfo.candidateList.email %}
                                                <p class="text-muted small mb-1">
                                                    <i class="fas fa-envelope me-1"></i>
                                                    {{ listInfo.candidateList.email }}
                                                </p>
                                            {% endif %}
                                            {% if listInfo.candidateList.phone %}
                                                <p class="text-muted small mb-2">
                                                    <i class="fas fa-phone me-1"></i>
                                                    {{ listInfo.candidateList.phone }}
                                                </p>
                                            {% endif %}
                                        </div>
                                        <div class="text-end">
                                            <div class="h4 text-success mb-1">{{ listInfo.totalCommitments }}</div>
                                            <small class="text-muted">Engagement{{ listInfo.totalCommitments > 1 ? 's' : '' }}</small>
                                        </div>
                                    </div>

                                    {% if listInfo.commitmentsByCategory is not empty %}
                                        <h6 class="fw-bold mb-2">
                                            <i class="fas fa-lightbulb me-1"></i>
                                            Engagements par catégorie :
                                        </h6>

                                        <div class="accordion" id="accordion-{{ listInfo.candidateList.id }}">
                                            {% for categoryName, categoryData in listInfo.commitmentsByCategory %}
                                                <div class="accordion-item">
                                                    <h2 class="accordion-header">
                                                        <button class="accordion-button collapsed" type="button"
                                                                data-bs-toggle="collapse"
                                                                data-bs-target="#collapse-{{ listInfo.candidateList.id }}-{{ loop.index }}"
                                                                aria-expanded="false">
                                                            <i class="fas fa-tag me-2"></i>
                                                            {{ categoryName }}
                                                            <span class="badge bg-primary ms-2">{{ categoryData.propositions|length }}</span>
                                                        </button>
                                                    </h2>
                                                    <div id="collapse-{{ listInfo.candidateList.id }}-{{ loop.index }}"
                                                         class="accordion-collapse collapse"
                                                         data-bs-parent="#accordion-{{ listInfo.candidateList.id }}">
                                                        <div class="accordion-body">
                                                            {% for propositionInfo in categoryData.propositions %}
                                                                <div class="proposition-item mb-2">
                                                                    <h6 class="fw-bold mb-1">{{ propositionInfo.proposition.title }}</h6>
                                                                    {% if propositionInfo.commitment.commentCandidateList %}
                                                                        <p class="text-muted small mb-1">
                                                                            <i class="fas fa-quote-left me-1"></i>
                                                                            {{ propositionInfo.commitment.commentCandidateList }}
                                                                        </p>
                                                                    {% endif %}
                                                                    <small class="text-muted">
                                                                        <i class="fas fa-calendar me-1"></i>
                                                                        Signé le {{ propositionInfo.commitment.creationDate|date('d/m/Y') }}
                                                                    </small>
                                                                </div>
                                                            {% endfor %}
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <div class="text-center py-3">
                                            <i class="fas fa-info-circle text-muted fa-2x mb-2"></i>
                                            <p class="text-muted mb-0">Cette liste n'a encore pris aucun engagement</p>
                                        </div>
                                    {% endif %}

                                    <div class="text-center mt-3 pt-3 border-top">
                                        <a href="{{ path('app_candidate_list_show', {id: listInfo.candidateList.id}) }}"
                                           class="btn btn-outline-success">
                                            <i class="fas fa-user-circle me-1"></i>
                                            Voir le profil de cette liste
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Navigation Section -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <a href="{{ path('app_cities_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour aux communes
                    </a>
                </div>
                <div class="col-md-6 text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                        <a href="{{ path('app_overview') }}" class="btn btn-outline-info">
                            <i class="fas fa-chart-bar me-1"></i>Vue d'ensemble
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
