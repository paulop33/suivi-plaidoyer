{% extends 'base.html.twig' %}

{% block title %}{{ proposition.title }} - Plaidoyer Vélo Bordeaux{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="proposition-header">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb breadcrumb-custom">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-white-50">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_category_show', {id: proposition.category.id, slug: proposition.category.slug}) }}" class="text-white-50">
                            {{ proposition.category.name }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">
                        Proposition
                    </li>
                </ol>
            </nav>

            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-5 fw-bold mb-3">{{ proposition.title }}</h1>
                    <div class="d-flex gap-4">
                        <div class="text-center">
                            <div class="h3 mb-1">{{ totalCommitments }}</div>
                            <small class="opacity-75">Engagements</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">{{ commitmentsByCity|length }}</div>
                            <small class="opacity-75">Communes</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fas fa-lightbulb fa-8x opacity-50"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Description Section -->
    {% if proposition.description %}
        <section class="py-4 bg-light">
            <div class="container">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Description de la proposition
                        </h4>
                        <p class="mb-0 fs-5 lh-lg text-muted">{{ proposition.description|nl2br }}</p>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    <!-- Expectations Section -->
    {% if hasCommonExpectation or hasSpecificExpectations %}
        <section class="py-4">
            <div class="container">
                <h4 class="fw-bold mb-4">
                    <i class="fas fa-bullseye text-success me-2"></i>
                    Ce que nous attendons des mairies
                </h4>

                {% if hasCommonExpectation %}
                    <div class="card border-success mb-3">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-check-circle me-2"></i>
                                Attente commune pour toutes les mairies
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 fs-5 lh-lg">{{ proposition.commonExpectation|nl2br }}</p>
                        </div>
                    </div>
                {% endif %}

                {% if hasSpecificExpectations %}
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                Attentes spécifiques par type de territoire
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                {% for specificExpectation in proposition.specificExpectations %}
                                    <div class="col-md-6 mb-3">
                                        <div class="border-start border-info border-4 ps-3">
                                            <h6 class="fw-bold text-info mb-2">
                                                <i class="fas fa-tag me-1"></i>
                                                {{ specificExpectation.specificity.name }}
                                            </h6>
                                            <p class="mb-0 text-muted">{{ specificExpectation.expectation|nl2br }}</p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </section>
    {% endif %}

    <!-- Commitments Section -->
    <section class="py-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h2 class="fw-bold mb-4">
                        <i class="fas fa-handshake text-success me-2"></i>
                        Listes engagées par commune
                    </h2>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control" id="citySearch"
                               placeholder="Rechercher une commune...">
                    </div>
                </div>
            </div>

            <div class="row" id="citiesGrid">
                    {% for cityName, cityData in commitmentsByCity %}
                        <div class="col-lg-6 col-xl-4 mb-4 city-item"
                             data-city-name="{{ cityName|lower }}"
                             data-has-commitments="{{ cityData.lists|length > 0 ? 'true' : 'false' }}">
                            <div class="commitment-card h-100">
                                <div class="city-header">
                                    <h5 class="mb-1 fw-bold">
                                        <i class="fas fa-map-marker-alt me-2"></i>
                                        {{ cityName }}
                                    </h5>
                                    <small class="opacity-75">
                                        {{ cityData.lists|length }} liste{{ cityData.lists|length > 1 ? 's' : '' }} engagée{{ cityData.lists|length > 1 ? 's' : '' }}
                                    </small>
                                </div>

                                <div class="card-body">
                                    {% if cityData.lists is empty %}
                                        <div class="text-center py-4">
                                            <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                                            <p class="text-muted mb-0">
                                                Aucune liste de {{ cityName }} ne s'est encore engagée sur cette proposition
                                            </p>
                                        </div>
                                    {% else %}
                                        {% for listData in cityData.lists %}
                                            {% set commitmentStatus = listData.commitment.status %}
                                            <div class="list-item{% if commitmentStatus %} list-item-{{ commitmentStatus.value }}{% endif %}">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <h6 class="fw-bold mb-1">
                                                            {% if commitmentStatus %}
                                                                {% if commitmentStatus.value == 'accepted' %}
                                                                    <span class="status-indicator status-accepted">✅</span>
                                                                {% elseif commitmentStatus.value == 'refused' %}
                                                                    <span class="status-indicator status-refused">❌</span>
                                                                {% endif %}
                                                            {% endif %}
                                                            {{ listData.candidateList.nameList }}
                                                        </h6>
                                                        <p class="text-muted mb-2 small">
                                                            {{ listData.candidateList.firstname }} {{ listData.candidateList.lastname }}
                                                        </p>

                                                        {% if listData.commitment.commentCandidateList %}
                                                            <div class="mt-2">
                                                                <small class="text-muted">
                                                                    <i class="fas fa-quote-left me-1"></i>
                                                                    {{ listData.commitment.commentCandidateList|slice(0, 100) }}{% if listData.commitment.commentCandidateList|length > 100 %}...{% endif %}
                                                                </small>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                    <a href="{{ path('app_candidate_list_show', {id: listData.candidateList.id, slug: listData.candidateList.slug}) }}"
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>

                                                <div class="mt-2 pt-2 border-top">
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar me-1"></i>
                                                        {% if commitmentStatus.value == 'accepted' %}
                                                            Engagé le
                                                        {% else %}
                                                            Refusé le
                                                        {% endif %}
                                                        {{ listData.commitment.creationDate|date('d/m/Y') }}
                                                    </small>
                                                    {% if listData.commitment.updateDate != listData.commitment.creationDate %}
                                                        <small class="text-muted ms-2">
                                                            <i class="fas fa-edit me-1"></i>
                                                            Modifié le {{ listData.commitment.updateDate|date('d/m/Y') }}
                                                        </small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% endif %}

                                    <div class="text-center mt-3 pt-3 border-top">
                                        <a href="{{ path('app_city_show', {slug: cityData.city.slug}) }}"
                                           class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-city me-1"></i>
                                            Voir toutes les listes de {{ cityName }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
        </div>
    </section>

    <!-- Navigation Section -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <a href="{{ path('app_category_show', {id: proposition.category.id, slug: proposition.category.slug}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à {{ proposition.category.name }}
                    </a>
                </div>
                <div class="col-md-6 text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_cities_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-city me-1"></i>Communes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('citySearch');
            const cityItems = document.querySelectorAll('.city-item');

            function filterCities() {
                const searchTerm = searchInput.value.toLowerCase();
                let visibleCount = 0;

                cityItems.forEach(item => {
                    const cityName = item.dataset.cityName;
                    let showItem = true;

                    // Apply search filter
                    if (searchTerm && !cityName.includes(searchTerm)) {
                        showItem = false;
                    }

                    if (showItem) {
                        item.style.display = 'block';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });
            }

            // Search input event
            searchInput.addEventListener('input', filterCities);
        });
    </script>
{% endblock %}
