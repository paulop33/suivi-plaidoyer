{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Suivi Plaidoyer{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="category-header">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb breadcrumb-custom">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-white-50">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">
                        {{ category.name }}
                    </li>
                </ol>
            </nav>

            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">{{ category.name }}</h1>
                    {% if category.description %}
                        <p class="lead mb-4 opacity-90">{{ category.description }}</p>
                    {% endif %}
                    <div class="d-flex gap-4 mb-3">
                        <div class="text-center">
                            <div class="h3 mb-1">{{ propositionData|length }}</div>
                            <small class="opacity-75">Propositions</small>
                        </div>
                        <div class="text-center">
                            <div class="h3 mb-1">
                                {% set totalSignatures = 0 %}
                                {% for data in propositionData %}
                                    {% set totalSignatures = totalSignatures + data.totalSignatures %}
                                {% endfor %}
                                {{ totalSignatures }}
                            </div>
                            <small class="opacity-75">Signatures totales</small>
                        </div>
                        {% if category.bareme %}
                            <div class="text-center">
                                <div class="h3 mb-1">{{ category.bareme }}</div>
                                <small class="opacity-75">Points</small>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fas fa-list-alt fa-8x opacity-50"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Propositions Section -->
    <section class="py-5">
        <div class="container">
            {% if propositionData is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h3 class="text-muted">Aucune proposition dans cette catégorie</h3>
                    <p class="text-muted">Les propositions apparaîtront ici une fois ajoutées.</p>
                    <a href="{{ path('app_home') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à l'accueil
                    </a>
                </div>
            {% else %}
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h2 class="fw-bold">
                            <i class="fas fa-lightbulb text-primary me-2"></i>
                            Propositions
                        </h2>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" class="form-control" id="propositionSearch"
                                   placeholder="Rechercher une proposition...">
                        </div>
                    </div>
                </div>
                <div class="row" id="propositionsGrid">
                {% for data in propositionData %}
                    <div class="col-lg-6 col-xl-4 mb-4 proposition-item"
                         data-proposition-title="{{ data.proposition.title|lower }}"
                         data-has-commitments="{{ data.totalSignatures > 0 ? 'true' : 'false' }}">
                    <div class="proposition-card">
                        <div class="card">
                            {% if data.proposition.image %}
                                <img src="{{ data.proposition.image }}"
                                     alt="{{ data.proposition.title }}"
                                     class="card-img-top proposition-image">
                            {% endif %}
                            <div class="card-header bg-white border-0 pb-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h4 class="card-title fw-bold mb-2">{{ data.proposition.title }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                    <a href="{{ path('app_proposition_show', {id: data.proposition.id}) }}"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>Voir les détails
                                    </a>

                                    <span class="badge bg-primary fs-6">
                                        {{ data.totalSignatures }} signature{{ data.totalSignatures > 1 ? 's' : '' }}
                                        {% if data.citiesWithSignatures|length > 0 %}
                                            <small>
                                            dans {{ data.citiesWithSignatures|length }} commune{{ data.citiesWithSignatures|length > 1 ? 's' : '' }}
                                        </small>
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Navigation Section -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à l'accueil
                    </a>
                </div>
                <div class="col-md-6 text-end">
                    <a href="{{ path('app_cities_index') }}" class="btn btn-outline-primary">
                        <i class="fas fa-city me-2"></i>Voir par commune
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('propositionSearch');
            const propositionItems = document.querySelectorAll('.proposition-item');

            function filterPropositions() {
                const searchTerm = searchInput.value.toLowerCase();
                let visibleCount = 0;

                propositionItems.forEach(item => {
                    const propositionTitle = item.dataset.propositionTitle;
                    let showItem = true;

                    // Apply search filter
                    if (searchTerm && !propositionTitle.includes(searchTerm)) {
                        showItem = false;
                    }

                    if (showItem) {
                        item.style.display = 'block';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });
            }

            // Search input event
            searchInput.addEventListener('input', filterPropositions);
        });
    </script>
{% endblock %}
